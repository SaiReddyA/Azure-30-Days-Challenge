@model List<FileItem>
@{
    ViewData["Title"] = "Azure File Share Upload & Download";
}
<div class="container mt-5">
    <h2 class="mb-4 text-primary">Azure File Share - Upload & Download</h2>

    <form asp-action="Upload" method="post" asp-controller="AzureFile" enctype="multipart/form-data" class="mb-4">
        <div class="input-group">
            <input type="file" name="uploadedFile" class="form-control" required />
            <button type="submit" class="btn btn-success">Upload</button>
        </div>
    </form>

    <h4 class="text-secondary">Files in Share:</h4>
    <table class="table table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>File Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.FileName</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@file.DownloadUrl">
                            <i class="bi bi-download"></i> Download
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
