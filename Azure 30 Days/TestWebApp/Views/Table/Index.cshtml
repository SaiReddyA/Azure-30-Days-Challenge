@model IEnumerable<TableEntityModel>

@{
    ViewBag.Title = "Azure Table Data";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="text-primary">Azure Table Data</h2>
                <a asp-action="Create" asp-controller="Table" class="btn btn-success">+ Add New</a>
            </div>

            <table class="table table-striped table-bordered shadow-sm rounded-3">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Table" asp-route-pk="@item.PartitionKey" asp-route-rk="@item.RowKey" class="btn btn-sm btn-warning me-1">Edit</a>
                                <a asp-action="Delete" asp-controller="Table" asp-route-pk="@item.PartitionKey" asp-route-rk="@item.RowKey" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
